<div class="row">
    <div class="col-xs-12">
        <div style="margin: 25px 0;">
            <a href="/admin/departments/single/<%= department %>">Назад</a>
        </div>


        <h2 class="text-warning" style="margin-bottom: 25px;">Додати лікаря до відділення</h2>

        <form action="/admin/departments/attach/<%= department %>">
            <div class="form-group">
                <label class="control-label">Виберіть лікаря</label>
                <select name="user" class="form-control" required>
                    <% for(var i = 0; i < list.length; i++) {%>
                    <option value="<%= list[i].id%>"><%= list[i].firstName + ' ' + list[i].middleName + ' ' + list[i].lastName%></option>
                    <% } %>
                </select>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">Додати</button>
            </div>
        </form>
    </div>
</div>